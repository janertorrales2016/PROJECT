<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/intervaloXhoras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/time_machine_20px"
        android:hint=" Interval hours"
        android:inputType="number"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/vecesXhoras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intervaloXhoras"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="number"
        android:hint=" Hours to be repeated"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/plus_1_hour_20px"
        android:padding="16dp"/>

</LinearLayout>