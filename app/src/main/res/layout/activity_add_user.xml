<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUser">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="32dp"
        android:text="In order to register, please enter an email and the password of your choice."
        android:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="106dp"
        app:srcCompat="@drawable/info_20px" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#F37870"
        app:srcCompat="@color/colorGreen" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:text="Add User"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="414dp"
        android:background="@drawable/round_bg"
        android:onClick="SaveUses"
        android:text="Create Acounnt"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/textalias"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:text=" Alias"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="123dp" />

    <EditText
        android:id="@+id/textpass"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/lock_20px"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:text=" Password"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="68dp" />

    <EditText
        android:id="@+id/textusers"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/collaborator_male_20px"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:text=" User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>