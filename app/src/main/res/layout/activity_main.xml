<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btnRecordatorios"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:background="@drawable/boton_recordatorios"
        android:clickable="true"
        android:gravity="center"
        android:onClick="btnRecordatorios" />
    <TextView
        android:id="@+id/textView_titulo_menu_instituciones"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="REMINDERS"
        android:textColor="#266195"
        android:gravity="center"
        android:textSize="18sp"
        android:onClick="btnRecordatorios"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="Add, Modify and Delete your reminders"
        android:textColor="#000000"
        android:gravity="center"
        android:onClick="btnRecordatorios"
        android:textSize="12sp"
        android:textStyle="bold|italic" />


    <ImageButton
        android:id="@+id/btnReportes"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:background="@drawable/boton_reportes"
        android:clickable="true"
        android:gravity="center"
        android:onClick="btnReport" />
    <TextView
        android:id="@+id/textView_titulo_menu_intituciones"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="REPORTS"
        android:textColor="#266195"
        android:gravity="center"
        android:textSize="18sp"
        android:onClick="btnReport"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="Show the detail of the assigned activities"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:onClick="btnReport"
        android:textStyle="bold|italic" />


    <ImageButton
        android:id="@+id/btnReport"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:background="@drawable/boton_historial"
        android:clickable="true"
        android:gravity="center"
        android:onClick="btnHistorial" />
    <TextView
        android:id="@+id/textView_titulo_enu_intituciones"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="HISTORY"
        android:textColor="#266195"
        android:gravity="center"
        android:textSize="18sp"
        android:onClick="btnHistorial"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="Display information on assigned activities"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:onClick="btnHistorial"
        android:textStyle="bold|italic" />

</LinearLayout>
