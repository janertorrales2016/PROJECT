<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDisp">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    <TextView
        android:id="@+id/tvTituloNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW DEVICE"
        android:textColor="#266195"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/txtAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloNuevo"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter device name"
        android:textColorHighlight="#266195"
        android:textColorLink="#266195" />
    <EditText
        android:id="@+id/txtMac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlias"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter device MAC address"
        android:textColorHighlight="#266195"
        android:textColorLink="#266195" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMac"
        android:gravity="center">
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMac"
        android:onClick="btnSaveDisp"
        android:text="SAVE" />
    </LinearLayout>
