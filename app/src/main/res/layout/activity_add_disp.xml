<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDisp">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="106dp"
        app:srcCompat="@drawable/info_20px" />
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="31dp"
        android:text="To configure the device enter the following data"
        android:textAlignment="viewStart" />
    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:text="User Registration"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    <TextView
        android:id="@+id/tvTituloNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="NEW DEVICE"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtAlias"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTituloNuevo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/collaborator_male_20px"
        android:drawablePadding="16dp"
        android:hint="Enter device name"
        android:padding="16dp"
        android:textColorHighlight="#266195"
        android:textColorLink="#266195" />
    <EditText
        android:id="@+id/txtMac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAlias"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/happy_mac_20px"
        android:drawablePadding="16dp"
        android:hint="Enter device MAC address"
        android:padding="16dp"
        android:textColorHighlight="#266195"
        android:textColorLink="#266195" />

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="170dp"
        android:layout_below="@+id/txtMac"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMac"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_bg"
            android:onClick="btnSaveDisp"
            android:text="SAVE"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
