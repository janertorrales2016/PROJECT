<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#F37870"
        app:srcCompat="@color/colorGreen" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="181dp"
        android:layout_marginTop="25dp"
        android:text="Config"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rol"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="372dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/collaborator_male_20px"
        android:padding="12dp"
        android:text=" Role"
        android:textColor="#131313" />

    <EditText
        android:id="@+id/txtdireccion"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="254dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/warehouse_20px"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:text=" Address" />

    <EditText
        android:id="@+id/txtcelular"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="197dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/hand_with_smartphone_20px"
        android:ems="10"
        android:inputType="phone"
        android:padding="12dp"
        android:text=" Cell phone" />


    <EditText
        android:id="@+id/txtapellido"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="137dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/male_user_20px"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:text=" Last name" />

    <EditText
        android:id="@+id/txtnombre"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/collaborator_male_20px"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:text=" Name" />

    <EditText
        android:id="@+id/et_mostrar_fecha_picker"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/pay_date_20px"
        android:ems="10"
        android:hint="@string/formato_fecha"
        android:inputType="date"
        android:padding="12dp"
        android:textColor="#131313"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/ib_obtener_fecha"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="8dp"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toRightOf="@+id/et_mostrar_fecha_picker"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnsave"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_bg"
        android:layout_marginBottom="254dp"
        android:text="Save"
        android:textColor="#FAF6F6"
        />
<TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="206dp"
        android:fontFamily="sans-serif-black"
        android:text="New Password"
        android:textAlignment="center"
        android:textColor="#f37870"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/keepass_20px"
        android:ems="10"
        android:hint=" New Password"
        android:inputType="textPassword"
        android:padding="12dp" />

    <EditText
        android:id="@+id/txtrepeatpassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="89dp"
        android:background="@drawable/round_border"
        android:drawableStart="@drawable/keepass_20px"
        android:ems="10"
        android:hint=" Repeat Password"
        android:inputType="textPassword"
        android:padding="12dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_bg"
        android:onClick="btnUpdatePassword"
        android:text="Save"
        android:textColor="#FAF6F6" />


</RelativeLayout>